        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WordClash">
        <activity
            android:name=".screens.LeaderboardActivity"
            android:exported="false" />
        <activity
            android:name=".screens.StartPageActivity"
            android:exported="false" />
        <activity
            android:name=".screens.AdminManageWordsActivity"
            android:exported="false" />
        <activity
            android:name=".screens.AdminAddWordActivity"
            android:exported="false" />
        <activity
            android:name=".screens.WordleActivity"
            android:exported="false" />
        <activity
            android:name=".screens.WordsListActivity"
            android:exported="false" /> <!-- NEW ACTIVITIES -->
        <activity
            android:name=".screens.LevelActivity"
            android:exported="false" />
        <activity
            android:name=".screens.GameActivity"
            android:exported="false" /> <!-- EXISTING ACTIVITIES -->
        <activity
            android:name=".screens.RanksActivity"
            android:exported="false" />
        <activity
            android:name=".screens.ChangeDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".screens.UserListActivity"
            android:exported="false" />
        <activity
            android:name=".screens.admin_users_Activity"
            android:exported="false" /> <!-- MAIN screen (first screen that opens) -->
        <activity
            android:name=".screens.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Other screens -->
        <activity
            android:name=".screens.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".screens.MainActivity"
            android:exported="false" />
        <activity
            android:name=".screens.LoginActivity"
            android:exported="false" />
    </application>

</manifest>